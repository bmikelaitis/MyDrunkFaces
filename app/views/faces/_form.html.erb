<%= render 'shared/errors', obj: @face %>

<div class="row">
    <div class="well col-xs-6 col-lg-6 col-lg-offset-3 col-xs-offset-3 center">
        <%= form_for @face do |f| %>
        <h5> Temporary Photo String: </h5>
        <%= f.text_field :picture %>
        <h5> Describe the Photo: </h5>
        <%= f.text_area :description, rows:3 %>
        
        <%= f.submit(@face.new_record? ? 'Submit Photo:' : 'Edit Photo' , class: "btn btn-success  btn-small" )%>
        <% end %>
    </div>
</div>